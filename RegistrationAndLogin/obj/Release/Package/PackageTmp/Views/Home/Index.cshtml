@model RegistrationAndLogin.Models.User
@{
    ViewBag.Title = "User Profile";
}
<h2>Profile Page</h2>


<div class="col-md-6">
    <div class="form-group">
        <label>First Name</label>
        @Html.EditorFor(model => model.FirstName, new { htmlAttributes = new { @class = "form-control", @placeholder = "First Name", @type = "text", @readonly = "readonly"}
})
    </div>
</div>
<div class="col-md-6">
    <div class="form-group">
        <label>Last Name</label>
        @Html.EditorFor(model => model.LastName, new { htmlAttributes = new { @class = "form-control", @placeholder = "Last Name", @type = "text", @readonly = "readonly"}
})
    </div>
</div>
<div class="col-md-6">
    <div class="form-group">
        <label>Email Address</label>
        @Html.EditorFor(model => model.EmailID, new { htmlAttributes = new { @class = "form-control", @placeholder = "Last Name", @type = "text", @readonly = "readonly"}
})
    </div>
</div>
<div class="col-md-6">
    <div class="form-group">
        <label>User Name</label>
        @Html.EditorFor(model => model.IdCode, new { htmlAttributes = new { @class = "form-control", @placeholder = "Last Name", @type = "text", @readonly = "readonly"}
})
    </div>
</div>
<div class="col-md-6">
    <div class="form-group">
        <label>Date of Birth</label>
        @Html.EditorFor(model => model.DateOfBirth, new { htmlAttributes = new { @class = "form-control", @placeholder = "Last Name", @type = "text", @readonly = "readonly"}
})
    </div>
</div>
<div class="col-md-6">
    <div class="form-group">
        @if (Request.IsAuthenticated)
        {
            using (Html.BeginForm("Logout", "User", FormMethod.Post, new { id = "logoutForm" }))
            {
                <a href="javascript:document.getElementById('logoutForm').submit()">Logout</a>
            }
        }
    </div>
</div>

